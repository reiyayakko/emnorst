{
    "source": "./src",
    "destination": "./docs",
    "plugins": [{
        "name": "esdoc-standard-plugin",
        "option": {
            "test": {
                "source": "./test",
                "includes": ["\\.js$"]
            },
            "brand": {
                "title": "Reiyayakko core",
                "repository": "https://github.com/reiyayakko/reiyayakko-core"
            },
            "manual": {
                "globalIndex": true,
                "index": "./readme.md",
                "files": [
                    "./manual/index.md",
                    "./manual/usage.md"
                ]
            }
        }
    }]
}
